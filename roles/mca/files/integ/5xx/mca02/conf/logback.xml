<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true" scan="true" scanPeriod="5 minutes">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>{TIME:"%date",MARKER:%marker,ORG:%X{ORG},APP:%logger{36},LVL:%level,COR:%X{COR},CLIENT_ID:%X{CLIENT_ID} ,INFO:"%msg"}%n</pattern>
        </encoder>
    </appender>


    <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="be.mteam.ebusiness.commons.logging.MarkerBasedDiscriminator">
            <defaultValue>APPLICATION</defaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${marker}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>/data/MCA02/logs/${marker}.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <!-- daily rollover -->
                    <fileNamePattern>/data/MCA02/logs/${marker}.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
                    <!-- keep 30 days' worth of history -->
                    <maxHistory>30</maxHistory>
                    <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                        <!-- or whenever the file size reaches 20MB -->
                        <maxFileSize>20MB</maxFileSize>
                    </timeBasedFileNamingAndTriggeringPolicy>
                </rollingPolicy>
                <encoder>
                    <pattern>{"TIME": "%date", "MARKER": "%marker", "UHST": "%X{UHST}", "ORG": "%X{ORG}", "APP": "%logger{36}", "SVC": "%X{SVC}", "USR": "%X{USR}", "LVL": "%level", "COR": "%X{COR}", "CLIENT_ID": "%X{CLIENT_ID}", "RFID": "%X{RFID}", "INFO": "%msg"}%n</pattern>
                </encoder>
            </appender>
        </sift>
    </appender>


    <logger name="org.springframework" level="INFO"/>
    <logger name="ch.qos.logback.core" level="INFO"/>
    <!--  <logger name="org.apache.cxf" level="TRACE"/>  -->
    <logger name="be.mteam.ebusiness.service" level="INFO"/>
    <logger name="be.mteam.ebusiness.commons.profiling" level="TRACE"/>
    <logger name="be.mteam.ebusiness.integration" level="INFO"/>
    <logger name="be.mteam.ebusiness.web.core.cxf.interceptor.EbusinessContextInInterceptor" level="INFO"/>
    <logger name="be.mteam.ebusiness.web.core.cxf.interceptor.EbusinessLoggingOutInterceptor" level="INFO"/>
    <logger name="be.mteam.ebusiness.web.WebAccessLogFilter" level="INFO"/>
    <logger name="be.mteam.ebusiness.integration.core.listener.AsyncQueueMessageListener" level="INFO"/>
        <logger name="be.mteam.ebusiness.integration.core.message.producer.SyncQueueMessageProducer" level="INFO"/>
    <!--<logger name="be.mteam.ebusiness.clients.policy.MultiRealmOAuth2RestTemplate" level="INFO"/> -->
        <logger name="be.mteam.ebusiness.commons.clients.MultiRealmOAuth2RestTemplate" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="SIFT"/>
    </root>
</configuration>
